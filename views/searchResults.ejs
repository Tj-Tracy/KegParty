<!doctype html>
<head>
    <title>KegParty - Search Results</title>
    <link href="/css/styles.css" rel="stylesheet" ></link>
    <link href="/css/font-awesome.min.css" rel="stylesheet"></link>
    <link rel="stylesheet" href="css/nav-bar.css">
</head>
<body>
  <div class="site-header">
    <a href="/"> <h1>Keg Party</h1> </a>
    <div class="nav">
      <ul>
        <li class="home"><a href="/">Home</a></li>
        <li><a class="active" href="/search">Search</a></li>
        <li><a href="/users/account">Account</a></li>
      </ul>
    </div>
  </div>
    <div class="flex-container">
      <div class="flex-item search-container">
        <form method="get" action="/search" >
          <input type="text" name="searchText" id="searchText" class="search-textbar" placeholder="Search for your favorite beer...">
        </form>
      </div>
      <button type="submit" class="flex-item search-button">
        <i class="fa fa-search" aria-hidden="true"></i>
      </button>
    </div>
  <div class="wrapper">
    <div class = "flex-container-column">
      <% if(beerList !== undefined){ %>
          <% for(let i=0; i < beerList.length; i++){ %>
            <% if(beerList[i].style != undefined){ %>
              <div class = "flex-item"><a href='/beers/<%= beerList[i].id %>'><%= beerList[i].name %> | <%= beerList[i].style.name %></a>
            <% } else { %>
              <div class = "flex-item"><a href='/beers/<%= beerList[i].id %>'><%= beerList[i].name %>%></a>
            <% } %>
            <% if(beerList[i].description != undefined){ %>
              <p><%= beerList[i].description %></p></div>
            <% } else { %>
              <p>(No Description)</p></div>
            <% } %>
          <% } %>
      <% } else {%>
        <p>No Search Results</p>
      <%}%>
    </div>
  </div>  
</body>
